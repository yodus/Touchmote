<UserControl x:Class="WiiTUIO.KeymapOutputItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="140">
    <UserControl.Resources>
        <ResourceDictionary>
            <TextBlock x:Key="CursorOpenHand" Cursor="/Resources/openhand.cur"/>
            <TextBlock x:Key="CursorClosedHand" Cursor="/Resources/closedhand.cur"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
        <Border Cursor="/Resources/openhand.cur" Name="border" Background="#F2FF5100" BorderThickness="0" BorderBrush="Red" MouseMove="border_MouseMove" TouchDown="border_TouchDown" TouchMove="border_TouchMove" CornerRadius="2" ClipToBounds="True">
            <TextBlock Name="tbName" Text="Default" Margin="5" FontSize="14" FontFamily="Segoe UI Semilight" Foreground="White" TextAlignment="Center" />
        </Border>
    
</UserControl>
